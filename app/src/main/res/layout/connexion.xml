<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epsi.takecare.Connexion">

    <Button
        android:text="@string/title_connexion"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConnexion"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MotDePasse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifiant"
        android:ems="10"
        android:id="@+id/Identifiant"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/MotDePasse"
        android:text="Mot de Passe"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Identifiant"
        app:layout_constraintRight_toRightOf="@+id/Identifiant"
        app:layout_constraintLeft_toLeftOf="@+id/Identifiant" />

</android.support.constraint.ConstraintLayout>
