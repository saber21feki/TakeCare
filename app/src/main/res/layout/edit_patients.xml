<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="159dp"
        android:layout_height="29dp"
        android:text="N° Sécurité Sociale"
        android:ems="10"
        android:id="@+id/NumSecuText"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/LastNamePatientText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/NumSecuPatient"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="159dp"
        android:layout_height="22dp"
        android:inputType="textPersonName"
        android:text="Nom"
        android:ems="10"
        android:id="@+id/LastNamePatientText"
        tools:layout_editor_absoluteY="93dp"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toRightOf="@+id/LastNamePatient"
        android:textSize="12sp" />

    <EditText
        android:layout_width="159dp"
        android:layout_height="19dp"
        android:inputType="textPersonName"
        android:text="Prénom"
        android:ems="10"
        tools:layout_editor_absoluteY="129dp"
        android:id="@+id/FirstNamePatientText"
        android:layout_marginStart="80dp"
        app:layout_constraintLeft_toRightOf="@+id/FirstNamePatient"
        android:textSize="12sp" />

    <TextView
        android:text="Numéro de Sécurité Sociale : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumSecuPatient"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/FichePatient" />

    <TextView
        android:text="Nom du Patient :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LastNamePatient"
        app:layout_constraintLeft_toLeftOf="@+id/NumSecuPatient"
        app:layout_constraintTop_toBottomOf="@+id/NumSecuPatient"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Prénom du Patient :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FirstNamePatient"
        app:layout_constraintLeft_toLeftOf="@+id/LastNamePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/LastNamePatient" />

    <TextView
        android:text="Date de Naissance :"
        android:layout_width="158dp"
        android:layout_height="18dp"
        android:id="@+id/DatePatient"
        app:layout_constraintLeft_toLeftOf="@+id/FirstNamePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/FirstNamePatient" />

    <EditText
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:inputType="date"
        android:ems="10"
        tools:layout_editor_absoluteY="161dp"
        android:id="@+id/DatePatientText"
        android:text="Date"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toRightOf="@+id/DatePatient"
        android:textSize="12sp" />

    <TextView
        android:text="Adresse Patient :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AdressePatient"
        app:layout_constraintLeft_toLeftOf="@+id/DatePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/DatePatient" />

    <EditText
        android:layout_width="167dp"
        android:layout_height="29dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        tools:layout_editor_absoluteY="201dp"
        android:id="@+id/AdressePatientText"
        android:text="Adresse"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toRightOf="@+id/AdressePatient"
        android:textSize="12sp" />

    <TextView
        android:text="Téléphone :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TelPatient"
        app:layout_constraintLeft_toLeftOf="@+id/AdressePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/AdressePatient" />

    <EditText
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:inputType="phone"
        android:ems="10"
        tools:layout_editor_absoluteY="237dp"
        android:id="@+id/TelPatientText"
        android:text="00 00 00 00 00"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toRightOf="@+id/TelPatient"
        android:textSize="12sp" />

    <TextView
        android:text="Email :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EmailPatient"
        app:layout_constraintLeft_toLeftOf="@+id/TelPatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TelPatient" />

    <TextView
        android:text="Sexe Patient :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SexePatient"
        app:layout_constraintLeft_toLeftOf="@+id/EmailPatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/EmailPatient" />

    <EditText
        android:layout_width="167dp"
        android:layout_height="25dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteY="268dp"
        android:id="@+id/EmailPatientText"
        android:text="Email@careTech.com"
        android:layout_marginStart="152dp"
        app:layout_constraintLeft_toRightOf="@+id/EmailPatient"
        android:textSize="12sp" />

    <Spinner
        android:layout_width="167dp"
        android:layout_height="22dp"
        tools:layout_editor_absoluteY="293dp"
        android:id="@+id/ListeSexesPatient"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toRightOf="@+id/SexePatient" />

    <TextView
        android:text="Poids du Patient :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PoidsPatient"
        app:layout_constraintLeft_toLeftOf="@+id/SexePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/SexePatient" />

    <EditText
        android:layout_width="167dp"
        android:layout_height="27dp"
        android:inputType="numberDecimal"
        android:ems="10"
        tools:layout_editor_absoluteY="320dp"
        android:id="@+id/PoidsPatientText"
        android:text="Poids"
        app:layout_constraintLeft_toRightOf="@+id/PoidsPatient"
        android:layout_marginStart="88dp"
        android:textSize="12sp" />

    <TextView
        android:text="Taille du Patient :"
        android:layout_width="144dp"
        android:layout_height="21dp"
        android:id="@+id/TaillePatient"
        app:layout_constraintLeft_toLeftOf="@+id/PoidsPatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/PoidsPatient" />

    <EditText
        android:layout_width="168dp"
        android:layout_height="31dp"
        android:inputType="numberDecimal"
        android:ems="10"
        tools:layout_editor_absoluteY="353dp"
        android:id="@+id/TaillePatientText"
        android:text="Taille"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toRightOf="@+id/TaillePatient"
        android:textSize="12sp" />

    <TextView
        android:text="Groupe Sanguin :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GroupeSanguinPatient"
        app:layout_constraintLeft_toLeftOf="@+id/TaillePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/TaillePatient" />

    <Button
        android:text="Mesures Avancées Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="447dp"
        tools:layout_editor_absoluteX="80dp"
        android:id="@+id/MesuresPatients" />

    <EditText
        android:layout_width="161dp"
        android:layout_height="31dp"
        android:inputType="textPersonName"
        android:text="Groupe Sanguin"
        android:ems="10"
        tools:layout_editor_absoluteY="392dp"
        android:id="@+id/GroupeSanguinPatientText"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toRightOf="@+id/GroupeSanguinPatient"
        android:textSize="12sp" />

    <TextView
        android:text="Fiche Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FichePatient"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>